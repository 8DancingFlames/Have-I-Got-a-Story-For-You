<section class="main">
  <div class="pure-g">
    <div class="pure-u-1">
      <h1><%= @storyName%></h1>
      <h2>Story created by: <%= @username %></h2>
    </div>
  </div>
    <% @stories.each do |i| %>
      <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-4">
              <h2><%= i["chapterName"] %></h2>
              <h3><%= i["username"] %></h3>
            </div>
            <div class="pure-u-1 pure-u-md-3-4">
              <p><%= i["content"] %></p>
            </div>
      </div>
      <hr />
    <% end %>

    <% if session[:username] != nil && !@finished %>
        <a href="/add_chapter/<%= @id %>">Add a Chapter</a>
    <% end %>

    <% if @finished %>
        <p>This story has been finished.</p>
    <% end %>

</section>