<section class="main">
  <div class="pure-g">
    <div class="pure-u-1">
      <h1><%= @story_to_view["storyName"]%></h1>
      <h2>Story started by: <%=@story_to_view["username"] %></h2>
    </div>
    <div class="pure-u-1 pure-u-md-1-4">
      <h2><%=@story_to_view["chapterName"]%></h2>
      <h3><%=@story_to_view["username"]%></h3>
    </div>
    <div class="pure-u-1 pure-u-md-3-4">
      <p><%=@story_to_view["content"] %></p>
    </div>

    <% if $username != nil %>
        <a class="pure-button" href="/add_chapter/<%=@story_to_view["storyId"] %>">Add a Chapter</a>
    <% end %>
  </div>
</section>