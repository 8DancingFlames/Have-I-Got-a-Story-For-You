<section class="main">
  <div class="pure-g">
    <div class="pure-u-1">
      <h1><%= @story_to_view["storyName"]%></h1>
      <h2>Story started by: <%=@story_to_view["username"] %></h2>
    </div>
    <% @story_to_view["tableOfContents"].each do |chapter| %>
        <div class="pure-u-1 pure-u-md-1-4">
          <h2><%=chapter.get_chapter_name%></h2>
          <h3><%=chapter.get_chapter_author%></h3>
        </div>
        <div class="pure-u-1 pure-u-md-3-4">
          <p><%=chapter.get_chapter_content %></p>
        </div>
    <%end%>

  </div>
</section>