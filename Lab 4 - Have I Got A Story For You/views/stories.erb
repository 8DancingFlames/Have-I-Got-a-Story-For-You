<h3>Stories</h3>

<table class="gridtable">
  <tr>
    <th>Story Name</th>
    <th>Created By</th>
    <th>Date Created</th>
    <th>Date Modified</th>
  </tr>
  <% @stories.each do |i| %>
      <%= '<tr>' %>
      <%= '<td><a href="/view_story/' + i["storyId"].to_s + '">' + i["storyName"].to_s + '</a></td>' %>
      <%= '<td>' + i["username"].to_s + '</td>' %>
      <%= '<td>' + i["dateCreated"].to_s + '</td>' %>
      <%= '<td>' + i["dateModified"].to_s + '</td>' %>
  <% end %>
</table>
<% if session[:username] != nil %>
    <a href="/create_story">Create Story</a>
<% end %>