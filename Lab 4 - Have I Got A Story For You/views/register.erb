 <section class="main">
    <section class="pure-g">
      <div class="no-display pure-u-md-1-3 l-box"></div>
      <div class="pure-u-md-1-3 l-box">
        <h1 class="welcome">Walden Books</h1>
        <% if $username == nil %>
            <h1 class="login-h1">Register</h1>
            <form class="pure-form pure-form-aligned" method="post" action="/register">
              <div class="pure-control-group">
                <label for="username">Username:</label>
                <input name="post[username]" type="text" placeholder="Username">
              </div>

              <div class="pure-control-group">
                <label for="password">Password:</label>
                <input name="post[password]" type="password" placeholder="Password">
              </div>
              <button type="submit" class="pure-button pure-button-primary">Register</button>
            </form>
        <% end %>
      </div>
      <div class="no-display pure-u-md-1-3 l-box"></div>
    </section>
  </section>


